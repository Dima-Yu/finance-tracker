- if !@tracked_stocks.empty?
  .col-sm-9
    table.table.table-bordered.table-hover
      thead
        tr
          th scope="col"  Ticker
          th scope="col"  Name
          th scope="col"  Last price
          th scope="col"  Actions
      tbody
        - @tracked_stocks.each do |stock|
          tr
            th scope="row" #{stock.ticker}
            td #{stock.name}
            td #{stock.last_price}
            td = link_to 'Remove', user_stock_path(stock), method: :delete, data: {confirm: "Are you sure"}, class: "btn btn-sm btn-warning"